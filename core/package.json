{
  "name": "@zap-ts/core",
  "version": "1.0.0",
  "private": false,
  "description": "Main package for Zap.ts, a Next.js modular boilerplate to build applications as fast as a zap.",
  "author": "Alexandre Trotel",
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap",
    "build:analyze": "ANALYZE=true next build",
    "db:check": "drizzle-kit check",
    "db:check:dev": "drizzle-kit check --config=drizzle.config.dev.ts",
    "db:export": "drizzle-kit export --config=drizzle.config.prod.ts",
    "db:export:dev": "drizzle-kit export --config=drizzle.config.dev.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.prod.ts",
    "db:generate:dev": "drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.prod.ts",
    "db:migrate:dev": "drizzle-kit migrate --config=drizzle.config.dev.ts",
    "db:pull": "drizzle-kit pull --config=drizzle.config.prod.ts",
    "db:pull:dev": "drizzle-kit pull --config=drizzle.config.dev.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.prod.ts",
    "db:push:dev": "drizzle-kit push --config=drizzle.config.dev.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.prod.ts",
    "db:studio:dev": "drizzle-kit studio --config=drizzle.config.dev.ts",
    "db:up": "drizzle-kit up --config=drizzle.config.prod.ts",
    "db:up:dev": "drizzle-kit up --config=drizzle.config.dev.ts",
    "dev": "next dev --turbopack",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev --turbopack",
    "dev:scan": "next dev --turbopack & npx react-scan@latest localhost:3000",
    "dev:trace": "NEXT_TURBOPACK_TRACING=1 next dev --turbopack",
    "format": "prettier --write .",
    "lint": "next lint",
    "mail:dev": "email dev",
    "start": "next start",
    "zap": "zap"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "next lint --fix .",
      "prettier --write ."
    ]
  },
  "dependencies": {
    "@ai-sdk/mistral": "^2.0.4",
    "@ai-sdk/openai": "^2.0.12",
    "@ai-sdk/react": "^2.0.12",
    "@better-fetch/fetch": "^1.1.18",
    "@bprogress/next": "^3.2.12",
    "@flags-sdk/posthog": "^0.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@neondatabase/serverless": "^1.0.1",
    "@next/bundle-analyzer": "^15.4.6",
    "@next/mdx": "^15.4.6",
    "@orpc/client": "^1.8.0",
    "@orpc/react-query": "^1.8.0",
    "@orpc/server": "^1.8.0",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.11",
    "@react-email/components": "^0.5.0",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-query-devtools": "^5.85.0",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.12",
    "class-variance-authority": "^0.7.1",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "embla-carousel-react": "^8.6.0",
    "flags": "^4.0.1",
    "gray-matter": "^4.0.3",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.539.0",
    "motion": "^12.23.12",
    "next": "^15.4.6",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "nuqs": "^2.4.3",
    "pg": "^8.16.3",
    "posthog-js": "^1.260.1",
    "posthog-node": "^5.6.0",
    "radix-ui": "^1.4.3",
    "react": "^19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "^19.1.1",
    "react-email": "^4.2.8",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.4",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.15.4",
